<Window x:Class="WPFTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTemplate"
        xmlns:svg="clr-namespace:WPFTemplate.Properties"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <local:CornerButton Content="MyButton" Width="100" Height="30" ButtonType="Update" ButtonStyle="Normal" Margin="10" Background="#FF4D83FF" BorderThickness="0"/>
        <local:CornerButton Content="MyButton" Width="100" Height="30" ButtonType="Update" ButtonStyle="OutLine" Margin="10" BorderThickness="1" BorderBrush="#FF4D83FF" CornerRadius="5"/>
        <local:CornerButton Content="MyButton" Width="100" ButtonStyle="Link"/>
        <local:CornerButton Content="MyButton" Width="100" Margin="10" CornerRadius="4"/>
    </StackPanel>
</Window>

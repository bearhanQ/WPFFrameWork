<Window x:Class="WPFTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTemplate"
        mc:Ignorable="d"
        Width="800" Height="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <local:Drawer HorizontalAlignment="Center" VerticalAlignment="Top" BorderBrush="Blue" BorderThickness="1"
                      Orientation="Vertical"
                      HorizontalContentAlignment="Center" VerticalContentAlignment="Center" PresentIndex="4">
            <local:DrawerItem Content="1" Width="40" Height="40" BorderBrush="Red"/>
            <local:DrawerItem Content="2" Width="40" Height="40" BorderBrush="Yellow" Margin="10,0"/>
            <local:DrawerItem Content="3" Width="40" Height="40" BorderBrush="Green"/>
            <local:DrawerItem Content="4" Width="40" Height="40" BorderBrush="Yellow" Margin="10,0"/>
            <local:DrawerItem Content="5" Width="40" Height="40" BorderBrush="Green"/>
            <local:DrawerItem Content="6" Width="40" Height="40" BorderBrush="Red" Margin="10,0"/>
            <local:DrawerItem Content="7" Width="40" Height="40" BorderBrush="Green"/>
            <local:DrawerItem Content="8" Width="40" Height="40" BorderBrush="Black" Margin="10,0"/>
        </local:Drawer>
        <local:Drawer HorizontalAlignment="Center" VerticalAlignment="Bottom" BorderBrush="Blue" BorderThickness="1"
                      Orientation="Vertical"
                      HorizontalContentAlignment="Center" VerticalContentAlignment="Center" PresentIndex="4">
            <local:DrawerItem Content="1" Width="40" Height="40" BorderBrush="Red"/>
            <local:DrawerItem Content="2" Width="40" Height="40" BorderBrush="Yellow" Margin="10,0"/>
            <local:DrawerItem Content="3" Width="40" Height="40" BorderBrush="Green"/>
            <local:DrawerItem Content="4" Width="40" Height="40" BorderBrush="Yellow" Margin="10,0"/>
            <local:DrawerItem Content="5" Width="40" Height="40" BorderBrush="Green"/>
            <local:DrawerItem Content="6" Width="40" Height="40" BorderBrush="Red" Margin="10,0"/>
            <local:DrawerItem Content="7" Width="40" Height="40" BorderBrush="Green"/>
            <local:DrawerItem Content="8" Width="40" Height="40" BorderBrush="Black" Margin="10,0"/>
        </local:Drawer>
        <local:Drawer HorizontalAlignment="Left" VerticalAlignment="Center" BorderBrush="Blue" BorderThickness="1"
                      HorizontalContentAlignment="Center" VerticalContentAlignment="Center" PresentIndex="4">
            <local:DrawerItem Content="1" Width="40" Height="40" BorderBrush="Red"/>
            <local:DrawerItem Content="2" Width="40" Height="40" BorderBrush="Yellow" Margin="10,0"/>
            <local:DrawerItem Content="3" Width="40" Height="40" BorderBrush="Green"/>
            <local:DrawerItem Content="4" Width="40" Height="40" BorderBrush="Yellow" Margin="10,0"/>
            <local:DrawerItem Content="5" Width="40" Height="40" BorderBrush="Green"/>
            <local:DrawerItem Content="6" Width="40" Height="40" BorderBrush="Red" Margin="10,0"/>
            <local:DrawerItem Content="7" Width="40" Height="40" BorderBrush="Green"/>
            <local:DrawerItem Content="8" Width="40" Height="40" BorderBrush="Black" Margin="10,0"/>
        </local:Drawer>
        <local:Drawer HorizontalAlignment="Right" VerticalAlignment="Center" BorderBrush="Blue" BorderThickness="1"
                      HorizontalContentAlignment="Center" VerticalContentAlignment="Center" PresentIndex="4">
            <local:DrawerItem Content="1" Width="40" Height="40" BorderBrush="Red"/>
            <local:DrawerItem Content="2" Width="40" Height="40" BorderBrush="Yellow" Margin="10,0"/>
            <local:DrawerItem Content="3" Width="40" Height="40" BorderBrush="Green"/>
            <local:DrawerItem Content="4" Width="40" Height="40" BorderBrush="Yellow" Margin="10,0"/>
            <local:DrawerItem Content="5" Width="40" Height="40" BorderBrush="Green"/>
            <local:DrawerItem Content="6" Width="40" Height="40" BorderBrush="Red" Margin="10,0"/>
            <local:DrawerItem Content="7" Width="40" Height="40" BorderBrush="Green"/>
            <local:DrawerItem Content="8" Width="40" Height="40" BorderBrush="Black" Margin="10,0"/>
        </local:Drawer>
    </Grid>
</Window>

<Window x:Class="WPFTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTemplate"
        xmlns:svg="clr-namespace:WPFTemplate.Properties"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <local:CornerCheckBox Content="MyCheckBox" CheckBoxType="Normal" CornerRadius="10"/>
        <local:CornerCheckBox Content="MyCheckBox" Margin="0,10" CheckBoxType="Switch"/>
        <CheckBox Content="MicCheckBox" Margin="0,10" Background="Red"/>
    </StackPanel>
</Window>

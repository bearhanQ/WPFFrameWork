<Window Style="{DynamicResource WindowStyle1}" x:Class="WPFTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTemplate"
        mc:Ignorable="d"
        Width="100" Height="100"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        UseLayoutRounding="True"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="WindowStyle1" TargetType="{x:Type Window}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <Grid>
                            <Border BorderThickness="1" BorderBrush="Silver" Margin="5" CornerRadius="3" Background="White">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="Black"/>
                                </Border.Effect>
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="50" BorderThickness="1" BorderBrush="Red" CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="5" Color="#FF020201" ShadowDepth="0" Opacity="0.6"/>
            </Border.Effect>
        </Border>
        <TextBlock Text="123" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>

<Window x:Class="WPFTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTemplate" xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <x:Array x:Key="liststr" Type="{x:Type sys:String}">
            <sys:String>Tom</sys:String>
            <sys:String>Jack</sys:String>
            <sys:String>Brain</sys:String>
        </x:Array>
    </Window.Resources>
    <StackPanel>
        <local:CornerProgressBar x:Name="cpb" Width="200" Height="30" Margin="10" Background="Blue" BorderBrush="Black" BorderThickness="2"/>
        <ProgressBar Width="100" Height="30" Margin="20" BorderThickness="3" x:Name="cpb2"/>
        <Slider Width="100" Minimum="-100" Maximum="100" Value="{Binding ElementName=cpb, Path=Value}" Margin="10"/>
    </StackPanel>
</Window>

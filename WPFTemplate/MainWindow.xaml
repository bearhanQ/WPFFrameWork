<Window x:Class="WPFTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen"
        xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Window.Resources>

        <x:Array x:Key="strs" Type="{x:Type sys:String}">
            <sys:String>Alerts</sys:String>
            <sys:String>Badges</sys:String>
            <sys:String>Buttons</sys:String>
            <sys:String>Cards</sys:String>
            <sys:String>Forms</sys:String>
            <sys:String>Modals</sys:String>
        </x:Array>

        <x:Array x:Key="peoples" Type="{x:Type local:People}">
            <local:People Name="Alerts" Age="1"/>
            <local:People Name="Badges" Age="2"/>
            <local:People Name="Buttons" Age="3"/>
            <local:People Name="Cards" Age="4"/>
            <local:People Name="Forms" Age="5"/>
            <local:People Name="Modals" Age="6"/>
        </x:Array>

        <Style x:Key="lb1" TargetType="{x:Type ListBox}" BasedOn="{StaticResource {x:Type ListBox}}">
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <Button Content="{TemplateBinding Content}" IsHitTestVisible="True" Width="20"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <DataGrid AutoGenerateColumns="False" x:Name="gd1" Height="100">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
            </DataGrid.Columns>
        </DataGrid>
        <local:CornerPagination x:Name="pg1" Margin="0,10"/>
        <local:CornerButton Width="30" Height="30" Click="Button_Click" ButtonStyle="Normal" 
                            BorderBrush="White" Background="White"
                            Icon="1"/>
        <Button Content="Add" Width="100" Background="#FF84BCF9" BorderBrush="LightBlue"/>
        <ListBox x:Name="listbox1" Style="{StaticResource lb1}">
            <ListBoxItem Content="1"/>
            <ListBoxItem Content="2"/>
            <ListBoxItem Content="3"/>
            <ListBoxItem Content="4"/>
        </ListBox>
        <TextBox Text="{Binding ElementName=listbox1, Path=SelectedItem}"/>
    </StackPanel>
</Window>

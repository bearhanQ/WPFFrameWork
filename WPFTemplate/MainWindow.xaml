<Window x:Class="WPFTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTemplate"
        xmlns:s="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Width="500" Height="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Width="100" Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
            </Grid.ColumnDefinitions>
            <Border x:Name="BorderUnderline" Grid.ColumnSpan="4" BorderThickness="0,0,0,2" BorderBrush="Blue" Visibility="Hidden" VerticalAlignment="Bottom"/>
            <TextBlock x:Name="TbIcon" Text="12" Grid.Column="1" VerticalAlignment="Center" Margin="2,0,0,0" HorizontalAlignment="Right" Background="Blue"/>
            <TextBlock Text="123" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
